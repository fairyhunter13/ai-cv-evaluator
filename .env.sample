# Application
APP_ENV=dev
PORT=8080

# Datastores
DB_URL=postgres://postgres:postgres@localhost:5432/app?sslmode=disable
KAFKA_BROKERS=localhost:19092

# AI Providers
AI_PROVIDER=openrouter
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# If empty, defaults to openrouter/auto
CHAT_MODEL=
# Optional comma-separated fallbacks, e.g. openai/gpt-4o-mini,anthropic/claude-3.5-sonnet
CHAT_FALLBACK_MODELS=
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
EMBEDDINGS_MODEL=text-embedding-3-small

# Vector DB (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Text extraction (Apache Tika)
TIKA_URL=http://localhost:9998

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=ai-cv-evaluator

# Server behavior
EMBED_CACHE_SIZE=2048
MAX_UPLOAD_MB=10
CORS_ALLOW_ORIGINS=*
RATE_LIMIT_PER_MIN=30

# Admin UI (enabled when all three set). These are sample values for local dev only.
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me
ADMIN_SESSION_SECRET=dev-sample-session-secret-change-me
