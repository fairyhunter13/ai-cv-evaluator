# App
APP_ENV=dev
PORT=8080

# Datastores
DB_URL=postgres://postgres:postgres@db:5432/app?sslmode=disable
REDIS_URL=redis://redis:6379

# AI Providers
AI_PROVIDER=openrouter
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
CHAT_MODEL=openai/gpt-4o-mini
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
EMBEDDINGS_MODEL=text-embedding-3-small

# Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# Tika (Text extraction)
TIKA_URL=http://tika:9998

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=ai-cv-evaluator

# Features
FEATURE_USE_MOCK_AI=true
FEATURE_ENABLE_ADMIN=true
MAX_UPLOAD_MB=10
CORS_ALLOW_ORIGINS=*
RATE_LIMIT_PER_MIN=30

# Admin UI (dev only; set secure values in staging/prod)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_SESSION_SECRET=dev-session-secret-change-me

