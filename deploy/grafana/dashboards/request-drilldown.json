  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "type": "table",
      "title": "Requests (per request_id)",
      "id": 1,
      "datasource": "Prometheus",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [ { "color": "green", "value": null } ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "request_id" },
            "properties": [
              {
                "id": "links",
                "value": [
                  {
                    "title": "View logs for this request_id",
                    "url": "/grafana/explore?orgId=1&left={\"datasource\":\"Loki\",\"queries\":[{\"refId\":\"A\",\"expr\":\"{request_id=\\\"${__value.raw}\\\"}\"}],\"range\":{\"from\":\"${__from}\",\"to\":\"${__to}\"}}",
                    "targetBlank": true
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "method" },
            "properties": [
              {
                "id": "links",
                "value": [
                  {
                    "title": "View logs for this method",
                    "url": "/grafana/explore?orgId=1&left={\"datasource\":\"Loki\",\"queries\":[{\"refId\":\"A\",\"expr\":\"{method=\\\"${__value.raw}\\\"}\"}],\"range\":{\"from\":\"${__from}\",\"to\":\"${__to}\"}}",
                    "targetBlank": true
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "route" },
            "properties": [
              {
                "id": "links",
                "value": [
                  {
                    "title": "View logs for this route (path)",
                    "url": "/grafana/explore?orgId=1&left={\"datasource\":\"Loki\",\"queries\":[{\"refId\":\"A\",\"expr\":\"{route=\\\"${__value.raw}\\\"}\"}],\"range\":{\"from\":\"${__from}\",\"to\":\"${__to}\"}}",
                    "targetBlank": true
                  }
                ]
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "status" },
            "properties": [
              {
                "id": "links",
                "value": [
                  {
                    "title": "View logs for this status",
                    "url": "/grafana/explore?orgId=1&left={\"datasource\":\"Loki\",\"queries\":[{\"refId\":\"A\",\"expr\":\"{status=\\\"${__value.raw}\\\"}\"}],\"range\":{\"from\":\"${__from}\",\"to\":\"${__to}\"}}",
                    "targetBlank": true
                  }
                ]
              }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "sortBy": [ { "displayName": "Time", "desc": true } ]
      },
      "targets": [
        {
          "expr": "http_request_by_id_total{route=~\"$route\",status=~\"$status\",request_id=~\"$request_id\"}",
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "labelsToFields",
          "options": { "mode": "columns" }
        }
      ]
    },
    {
      "type": "logs",
      "title": "Error / warning logs for selected request_id",
      "id": 2,
      "datasource": "Loki",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 10 },
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true
      },
      "targets": [
        {
          "expr": "{job=\"app-logs\",request_id=~\"$request_id\",level=~\"WARN|ERROR|FATAL\"}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "logs",
      "title": "External calls for selected request_id",
      "id": 4,
      "datasource": "Loki",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 18 },
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true
      },
      "targets": [
        {
          "expr": "{job=\"app-logs\",request_id=~\"$request_id\"} |= \"external connection executed\"",
          "refId": "A"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Failed HTTP / job logs for selected request_id",
      "id": 5,
      "datasource": "Loki",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 26 },
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true
      },
      "targets": [
        {
          "expr": "{job=\"app-logs\",request_id=~\"$request_id\",status!=\"OK\",status!=\"success\"}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Logs for selected request_id",
      "id": 3,
      "datasource": "Loki",
      "gridPos": { "h": 14, "w": 24, "x": 0, "y": 32 },
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true
      },
      "targets": [
        {
          "expr": "{route=~\"$route\",status=~\"$status\",request_id=~\"$request_id\"}",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 27,
  "style": "dark",
  "tags": ["http", "drilldown"],
  "templating": {
    "list": [
      {
        "name": "route",
        "label": "Route",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(http_request_by_id_total, route)",
        "refresh": 1,
        "hide": 0,
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "sort": 1
      },
      {
        "name": "status",
        "label": "Status",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(http_request_by_id_total, status)",
        "refresh": 1,
        "hide": 0,
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "sort": 1
      },
      {
        "name": "request_id",
        "label": "Request ID",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values({job=\"app-logs\",route=~\"$route\",status=~\"$status\",request_id!=\"\"}, request_id)",
        "refresh": 1,
        "hide": 0,
        "multi": true,
        "includeAll": true,
        "allValue": ".+",
        "sort": 1,
        "current": {
          "text": "All",
          "value": ".+"
        }
      }
    ]
  },
  "time": {
    "from": "now-30m",
    "to": "now"
  },
