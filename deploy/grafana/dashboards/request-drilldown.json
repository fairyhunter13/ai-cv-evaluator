{
  "annotations": {
    "list": []
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "type": "text",
      "title": "Request Drilldown Info",
      "id": 10,
      "gridPos": { "h": 2, "w": 24, "x": 0, "y": 0 },
      "options": {
        "mode": "markdown",
        "content": "**Note:** This dashboard provides request-level correlation using Loki logs. Use the filters above to narrow down by Route, Status, or Request ID. Click any request_id in the logs below to see full request lifecycle."
      }
    },
    {
      "type": "logs",
      "title": "HTTP Requests (from Loki)",
      "id": 1,
      "datasource": "Loki",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 2 },
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "prettifyLogMessage": false,
        "sortOrder": "Descending"
      },
      "targets": [
        {
          "expr": "{job=\"app-logs\",request_id=~\"$request_id\"} |~ \"http_access|request completed\" | json | line_format \"{{.request_id}} {{.method}} {{.path}} {{.status}} {{.duration_ms}}ms\"",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {}
        },
        "overrides": []
      }
    },
    {
      "type": "logs",
      "title": "Error / warning logs for selected request_id",
      "id": 2,
      "datasource": "Loki",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true,
        "enableLogDetails": true
      },
      "targets": [
        {
          "expr": "{job=\"app-logs\"} |~ \"$request_id\" | json | level=~\"WARN|ERROR|FATAL|error|warn\"",
          "refId": "A"
        }
      ]
    },
    {
      "type": "logs",
      "title": "External calls for selected request_id",
      "id": 4,
      "datasource": "Loki",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 22 },
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true,
        "enableLogDetails": true
      },
      "targets": [
        {
          "expr": "{job=\"app-logs\"} |~ \"$request_id\" | json | msg=~\".*external.*|.*http.*|.*request.*completed.*|.*AI.*|.*Tika.*|.*Qdrant.*|.*OpenRouter.*\"",
          "refId": "A"
        }
      ]
    },
    {
      "type": "logs",
      "title": "Failed HTTP / job logs for selected request_id",
      "id": 5,
      "datasource": "Loki",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 30 },
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true,
        "enableLogDetails": true
      },
      "targets": [
        {
          "expr": "{job=\"app-logs\"} |~ \"$request_id\" | json | status_text!=\"OK\" or level=~\"ERROR|FATAL|error\"",
          "refId": "A"
        }
      ]
    },
    {
      "type": "logs",
      "title": "All logs for selected request_id",
      "id": 3,
      "datasource": "Loki",
      "gridPos": { "h": 14, "w": 24, "x": 0, "y": 36 },
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true,
        "enableLogDetails": true
      },
      "targets": [
        {
          "expr": "{job=\"app-logs\"} |~ \"$request_id\" | json",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 27,
  "style": "dark",
  "tags": ["http", "drilldown"],
  "templating": {
    "list": [
      {
        "name": "route",
        "label": "Route",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values({job=\"app-logs\"}, route)",
        "refresh": 1,
        "hide": 0,
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "sort": 1
      },
      {
        "name": "status",
        "label": "Status",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values({job=\"app-logs\"}, status)",
        "refresh": 1,
        "hide": 0,
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "sort": 1
      },
      {
        "name": "request_id",
        "label": "Request ID",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values({job=\"app-logs\",route=~\"$route\",status=~\"$status\",request_id!=\"\"}, request_id)",
        "refresh": 1,
        "hide": 0,
        "multi": true,
        "includeAll": true,
        "allValue": ".+",
        "sort": 1,
        "current": {
          "text": "All",
          "value": ".+"
        }
      }
    ]
  },
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "Request Drilldown",
  "uid": "request-drilldown",
  "version": 1
}
